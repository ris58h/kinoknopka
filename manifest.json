{
    "manifest_version": 2,

    "name": "KinoKnopka",
    "description": "KinoKnopka",
    "version": "0.0.2",

    "applications": {
        "gecko": {
             "id": "kinoknopka@ris58h"
        }
    },

    "content_scripts": [
        {
            "matches": ["https://www.kinopoisk.ru/film/*"],
            "js": ["core.js", "kinopoisk.js"]
        },
        {
            "matches": ["https://www.imdb.com/title/*"],
            "js": ["core.js", "imdb.js"]
        }
    ],

    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },

    "web_accessible_resources": [
        "icons/icon.svg"
    ]
}
